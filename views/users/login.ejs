<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Login to Wanderlust</h1>
  <div class="col-6 offset-3"> 

   <form action="/login" method="post" class="needs-validation" novalidate>
    <!-- for username -->
    <div class="mb-3">
        <label for="username" class="form-label">Username:</label>
        <input
          id="username"
          type="text"
          placeholder="Enter the username"
          name="username"
          class="form-control"
          required
        />
        <div class="invalid-feedback">username is a required field</div>
        </div>
    
    <!-- for password -->
            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input
                  id="password"
                  type="password"
                  placeholder="Enter the password"
                  name="password"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">password is a required field</div>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Login</button>
                </div>
   </form>

</div>
</div>