<% layout("/layouts/boilerplate") -%>
<body>
  

  <div class="row mt-3">
    <div class="col-8 offset-2">

      <h3>new listing form</h3>
  <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
    
    <div class="mb-3">
      <label for="title" class="form-label">Title:</label>
      <input
        id="title"
        type="text"
        placeholder="Enter the title"
        name="title"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Title is a required field</div>
      </div>
  <div class="mb-3">
    <label for="description" class="form-label">Description:</label>
    <!-- <input
      id="description"
      type="text"
      placeholder="enter description"
      name="description"
      class="form-control"
    /> -->
    <textarea name="description" id="description" cols="30" rows="4" class="form-control" required></textarea>
    <div class="invalid-feedback">please enter some description</div>
  </div>
    
     <div class="mb-3">
      <labesl for="price" class="form-label">Price:</label>
      <input
        id="price"
        
        placeholder="enter the price"
        name="price"
        class="form-control"
        required
      />
      <div class="invalid-feedback">please enter the valid price</div>
     </div>
     <!-- <div class="mb-3">
      <label for="image" class="form-label">Image Url:</label>
      <input type="text" placeholder="enter the image URL" class="form-control" name="image">
      <div class="valid-feedback">Nice Image!!!</div>
      <div class="invalid-feedback">Image Field is required</div> -->
<!--       
     </div > -->
     
     <div class="mb-3">
      <label for="image" class="form-label">Upload image</label>
      <input type="file"  class="form-control" name="image" required>
     </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
      <input
        id="location"
        type="text"
        placeholder="location"
        name="location"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Loaction must be Valid!!</div>
      </div>
      <div class="mb-3">
        <label for="country" class="form-label">Country:</label>
      <input
        id="country"
        type="text"
        placeholder="enter country"
        name="country"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Country Name Must be Valid!!!</div>
      </div>
      <div class="mb-3 ">
        <button class="btn btn-dark add-btn">Add</button>
      </div>
     
    
  </form>
</div>
</div>
</body>
