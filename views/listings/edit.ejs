<% layout("/layouts/boilerplate") -%>
  <body>
    <div class="row mt-3">

    <div class="col-8 offset-2">
    <h3>new listing form</h3>
    <form action="/listings/<%=targetListing._id%>?_method=put" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
          <input
            type="text"
            value="<%=targetListing.title%>"
            name="title"
            id="title"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Title is a required field</div>
        </div>
     
    <div class="mb-3">
  <label for="description" class="form-label">Description</label>
      
    <textarea name="description" id="description" cols="30" rows="3" class="form-control" required ><%=targetListing.description%></textarea>
    <div class="invalid-feedback">please enter some description</div>
    </div>
       <div class="mb-3">
        <label for="price" class="form-label">Price:</label>
        <input
        type="number"
        value="<%=targetListing.price%>"
        name="price"
        id="price"
        class="form-control"
        required
      />

      <div class="mb-3">
        <label for="image" class="form-label">Upload the New Image</label>
        <input
        type="file"
        name="image"
        id="image"
        class="form-control"
      />
      
      <div class="invalid-feedback">please enter the valid price</div>
       </div>
       <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
        type="text"
        value="<%=targetListing.location%>"
        name="location"
        id="location"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Loaction must be Valid!!</div>
       </div>
        <div class="mb-3">
          <label for="country" class="form-label">Country</label>
          <input
          type="text"
          value="<%=targetListing.country%>"
          name="country"
          id="country"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Country Name Must be Valid!!!</div>
        </div>
        <div class="mb-3 ">
          <button class="btn add-btn">Edit</button>
        </div>
       
     
    </form>
  </div>
  </div>
  </body>

